
<h1>Become a TopTenLister!</h1>

<%= render :partial => 'layouts/errors', locals: {object: @user} %>

<div class="container-fluid">
<div class="form">
  <p>Sign up here and share your to lists with the rest of the community:</p>
    <%= form_for(@user, url: '/signup') do |f| %>
    <div class="row">
      <%= f.label :username, 'Username:', :class => "form-label"%>
      <%= f.text_field :username, :class => "form-control"%> <br>
    </div>
    <div class="row">
      <%= f.label :password, 'Password:', :class => "form-label"%>
      <%= f.password_field :password, :class => "form-control"%> <br>
    </div>
    <br/>
      <%= f.submit 'Sign Up'%>
    

    <% end %>
    <br/>
  <h3>Or:</h3> 
  <%= button_to 'Log In With Google', '/auth/google_oauth2' %>
  </div>
</div>