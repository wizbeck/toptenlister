<h1>Become a TopTenLister!</h1>
<p>Sign up here:</p>

<%= form_for(@user, url: '/signup') do |f| %>

  <%= f.label :username, 'Username:'%>
  <%= f.text_field :username %> <br>

  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password%> <br>
  <br>

  <%= f.submit 'Sign Up'%>

<% end %>