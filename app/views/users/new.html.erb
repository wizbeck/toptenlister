
<h1 class="text-center">Become a TopTenLister!</h1>

<%= render :partial => 'layouts/errors', locals: {object: @user} %>

<div class="container-fluid align-items-center">
<div class="form" style="width: 25rem;">

  <p>Sign up here and share your to lists with the rest of the community:</p>
    <%= form_for(@user, url: '/signup') do |f| %>
    
      <%= f.label :username, 'Username', :class => "form-label"%>
      <%= f.text_field :username, :class => "form-control"%> <br>
    
    
      <%= f.label :password, 'Password', :class => "form-label"%>
      <%= f.password_field :password, :class => "form-control"%> <br>
    
    <br/>
      <div class="text-center">
        <%= f.submit 'Sign Up', :class => "btn btn-primary"%>
      </div>

    <% end %>
    <br/>
    <div class="text-center">
      <h3>Or:</h3> 
      <%= button_to 'Log In With Google', '/auth/google_oauth2', :class => "btn btn-secondary mb-3" %>
    </div>

  </div>
  </div>
</div>