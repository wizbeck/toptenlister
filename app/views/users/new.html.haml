- url_opt = request.url == signup_url ? signup_path : login_path

- if url_opt == signup_path
  %h1.text-center Become a TopTenLister!
  %p.text-center Sign up here and share your to lists with the rest of the community:
- else
  %h1.text-center Log In to TopTenLister
  %p.text-center Post some content!
.card.bg-light.col-md-8.m-auto
  .card-body
    = form_for :user, url: url_opt, html: {class: 'mt-4'} do |f|
      .form-group
        = f.label :username, 'Username', class: 'form-label'
        = f.text_field :username, class: 'form-control'
      .form-group
        = f.label :password, 'Password', class: 'form-label'
        = f.password_field :password, class: 'form-control'
      - if request.path == signup_path
        .form-group
          = f.label :password_confirmation, 'Confirm Password', class: 'form-label'
          = f.password_field :password_confirmation, class: 'form-control'
      %br
      %br
      .text-center
        = f.submit 'Sign Up', class: "btn btn-primary mb-2"
      .text-center
        %h3.mb-3 Or:
        = button_to '/auth/google_oauth2', class: "btn btn-secondary mb-3"  do
          = 'Log in with'
          %i.fab.fa-google
