<h1><%= @list.title %></h1>

  <h3><%= @list.description %></h3>

<ol>
  <% @list.items.each do |item| %>
    <% if !item.blank? %>
    <li><%= item %></li> <br>
      <% end %>
  <% end %>
</ol>  
  <% if @list.user == current_user%>
    <h4><%= link_to 'Edit List', edit_list_path(@list) %></h4>
  <% end %>
  <p>For more lists of the <%= @list.topic.name %> topic click <%= link_to 'here', topic_lists_path(@list.topic) %></p>