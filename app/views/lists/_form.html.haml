.col-8.mx-auto
  = form_for(@list) do |f|
    .form-group#title.mb-3
      = f.label :title, "List Title", class: 'form-label'
      = f.text_field :title, class: 'form-control'
    .form-group.mb-5.topic-fields
      = f.label 'existing-topic', 'Choose an existing Topic:'
      = f.collection_select(:topic_id, Topic.plucked_names, :first, :second, {prompt: 'Select a Topic'}, {class: 'form-select mb-3', id: 'existing-topic'})
      = f.fields_for :topic, @list.build_topic do |tf|
        = tf.label :name, 'Or make a list with a new topic:', class: 'form-label'
        = tf.text_field :name, class: 'form-control mb-3'
    = f.label :description, class: 'form-label'
    = f.text_area :description, class: 'form-control mb-2', cols: 100, rows: 4
    = f.label :item_1, class: 'form-label'
    = f.text_field :item_1, class: 'form-control'
    = f.label :item_2, class: 'form-label'
    = f.text_field :item_2, class: 'form-control'
    = f.label :item_3, class: 'form-label'
    = f.text_field :item_3, class: 'form-control'
    = f.label :item_4, class: 'form-label'
    = f.text_field :item_4, class: 'form-control'
    = f.label :item_5, class: 'form-label'
    = f.text_field :item_5, class: 'form-control'
    = f.label :item_6, class: 'form-label'
    = f.text_field :item_6, class: 'form-control'
    = f.label :item_7, class: 'form-label'
    = f.text_field :item_7, class: 'form-control'
    = f.label :item_8, class: 'form-label'
    = f.text_field :item_8, class: 'form-control'
    = f.label :item_9, class: 'form-label'
    = f.text_field :item_9, class: 'form-control'
    = f.label :item_10, class: 'form-label'
    = f.text_field :item_10, class: 'form-control'
    .form-group.row.my-3.justify-content-center
      .col-auto
        = f.submit class: 'btn btn-secondary'
      .col-auto
        = link_to 'Cancel', lists_path, class: 'btn btn-danger'
