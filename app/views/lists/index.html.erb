<% if @topic %>
  <h1 class="text-center">Lists from <%= @topic.name %> Topic</h1>
<% else %>
  <h1 class="text-center">All Lists</h1>
<% end %>
<%= form_tag('/lists', method: :get, class: 'input-group w-50 mb-3') do |f| %>
  <%= search_field_tag 'search', nil, class: 'form-control', placeholder: 'Search' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <%= button_to 'Clear', lists_path, method: :get, class:'btn btn-secondary' if params[:search].present? %>
<% end %>
<ul class="list-group-flush">
  <% @lists.each do |list| %>
    <li class="list-group-item"><%= link_to list.title, list_path(list)%> - <i class="fas fa-user"></i> <%= list.user.username %></li>
  <% end %>
</ul>
<% if @topic %>
  <p> Make your own Top <%= @topic.name %> list <%= link_to 'here', new_topic_list_path(@topic)%>.</p>
<% end %>