<% if object.errors.any? %>
  <div class="container-fluid text-center mb-3" id="error_explanation" style="width: 28rem; color: red;">
  <div class="card">
    <p>Unable to Login:</p>
      <% object.errors.each do |error| %>
        <%= error.full_message %><br/>
      <% end %>
      </div>
  </div>
<% end %>